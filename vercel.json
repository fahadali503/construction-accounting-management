{
  "buildCommand": "prisma generate && next build",
  "devCommand": "next dev",
  "installCommand": "bun install",
  "framework": "nextjs",
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "PRISMA_GENERATE_SKIP_DOWNLOAD": "true"
    }
  }
}
