generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id               String            @id @default(cuid())
  name             String
  location         String?
  description      String?
  contractorCost   Float             @default(0)
  materialCost     Float             @default(0)
  totalCost        Float             @default(0)
  budget           Float             @default(0)
  variance         Float             @default(0)
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  transactions     Transaction[]
  financialRecords FinancialRecord[]

  @@map("projects")
}

model FinancialRecord {
  id            String                  @id @default(cuid())
  projectId     String
  project       Project                 @relation(fields: [projectId], references: [id], onDelete: Cascade)
  date          DateTime
  description   String
  category      FinancialRecordCategory
  trade         String
  unit          String
  unitRatePrice Float
  qty           Float
  totalAmount   Float
  createdAt     DateTime                @default(now())
  updatedAt     DateTime                @updatedAt

  @@map("financial_records")
}

enum FinancialRecordCategory {
  Contractor
  Vendor
  Supplier
}

model Transaction {
  id        String   @id @default(cuid())
  date      DateTime
  notes     String
  category  String
  credit    Float    @default(0)
  debit     Float    @default(0)
  balance   Float    @default(0)
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("transactions")
}
